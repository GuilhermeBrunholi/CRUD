@model module4.Domain.Category
@using module4.Domain

@{
    ViewData["Title"] = "Cadastro de Categoria";
}

@foreach(var item in ViewBag.Category as List<Category>)
{
    <li>
        @item.Name
        <a href="/Category/Index/@item.Id">Editar</a>
        <form asp-action="Delete" asp-controller="Category" method="Post">
            <input type="hidden" name="id" value="@item.Id">
            <button type="submit" class="btn btn-default">Deleter</button>
        </form>
    </li>
}

<form asp-action="Register" asp-controller="Category" method="POST">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <button type="submit" class="btn btn-default">Salvar</button>
</form>